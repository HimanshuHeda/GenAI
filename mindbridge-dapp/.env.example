# MindBridge dApp Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# Database Configuration
# ===================================
MONGODB_PASSWORD=your_mongodb_password_here
MONGODB_URI=mongodb://mindbridge:your_mongodb_password_here@localhost:27017/mindbridge

# ===================================
# Authentication & Security
# ===================================
JWT_SECRET=your_jwt_secret_here_make_it_very_long_and_random
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===================================
# Google Cloud & AI Configuration
# ===================================
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
VERTEX_AI_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./config/google-service-account.json
GEMINI_API_KEY=your_gemini_api_key_here

# ===================================
# Blockchain Configuration
# ===================================
POLYGON_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id
ETHEREUM_RPC_URL=https://goerli.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_deployer_private_key_here
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# ===================================
# Lightning Network Configuration
# ===================================
LIGHTNING_NODE_URI=localhost:10009
LIGHTNING_TLS_CERT_PATH=./config/lnd/tls.cert
LIGHTNING_MACAROON_PATH=./config/lnd/admin.macaroon
BITCOIN_RPC_PASSWORD=your_bitcoin_rpc_password

# ===================================
# IPFS Configuration
# ===================================
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# ===================================
# External APIs
# ===================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ===================================
# Monitoring & Analytics
# ===================================
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_PORT=9090

# ===================================
# Development Configuration
# ===================================
NODE_ENV=development
PORT=4000
WEB_PORT=3000

# ===================================
# Cultural Data Sources
# ===================================
INDIAN_CULTURAL_DATA_API=your_cultural_data_api_endpoint
REGIONAL_LANGUAGE_API=your_language_processing_api

# ===================================
# Crisis Management
# ===================================
CRISIS_HOTLINE_API=your_crisis_hotline_integration
EMERGENCY_CONTACT_SERVICE=your_emergency_service_api

# ===================================
# Social Features
# ===================================
COMMUNITY_MODERATION_API=your_moderation_service
PEER_SUPPORT_MATCHING_API=your_matching_algorithm_endpoint